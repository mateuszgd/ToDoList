@model ToDoList.Models.TodoModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Szczegóły zadania</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <hr />
</div>
<div>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.TodoId }, new { @class = "btn btn-primary" } )
    <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
</div>
